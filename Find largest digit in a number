#include <iostream>
using namespace std;

int main() {
    int num, largest = 0;
    cout << "Enter number: ";
    cin >> num;

    while(num > 0) {
        int digit = num % 10;
        if(digit > largest) largest = digit;
        num /= 10;
    }
    cout << "Largest digit = " << largest;
    return 0;
}
