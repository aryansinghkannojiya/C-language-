#include <iostream>
using namespace std;

int main() {
    string password;
    string correctPassword = "secret";  // you can set your own password

    while(true) {
        cout << "Enter password: ";
        cin >> password;

        if(password == correctPassword) {
            cout << "Access Granted!" << endl;
            break;   // exit loop when correct
        } else {
            cout << "Invalid password. Try again." << endl;
        }
    }

    return 0;
}
