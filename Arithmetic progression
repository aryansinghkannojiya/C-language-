#include <iostream>
using namespace std;

int main() {
    int a, d, n;   // a = first term, d = common difference, n = number of terms
    cout << "Enter first term (a): ";
    cin >> a;
    cout << "Enter common difference (d): ";
    cin >> d;
    cout << "Enter number of terms (n): ";
    cin >> n;

    cout << "Arithmetic Progression: ";
    for(int i = 0; i < n; i++) {
        cout << a + i * d << " ";
    }

    return 0;
}
